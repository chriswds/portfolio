<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Portfolio</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        html, body {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
        }
        iframe {
            width: 100%;
            height: 100%;
            border: none;
        }
    </style>
    <script>
        // Fonction pour détecter si l'utilisateur est sur un appareil mobile
        function detectMobileDevice() {
            const userAgent = navigator.userAgent || navigator.vendor || window.opera;
            // Regexp pour vérifier les user agent de différents mobiles
            return /android|webos|iphone|ipad|ipod|blackberry|iemobile|opera mini/i.test(userAgent.toLowerCase());
        }

        // Fonction pour définir la source de l'iframe en fonction de l'appareil
        function setIframeSource() {
            var iframeSrc;
            if (detectMobileDevice()) {
                // URL du prototype mobile
                iframeSrc = 'https://www.figma.com/proto/b0c2O1ZApsMZcHbjO0idIU/Portfolio?page-id=0%3A1&node-id=148-1594&viewport=-1174%2C-1042%2C0.13&t=m9CyW8DxzhVaxuhp-1&scaling=contain&starting-point-node-id=148%3A1594&show-proto-sidebar=1';
            } else {
                // URL du prototype desktop
                iframeSrc = 'https://www.figma.com/proto/b0c2O1ZApsMZcHbjO0idIU/Portfolio?page-id=0%3A1&type=design&node-id=148-1594&viewport=-3129%2C-1780%2C0.32&t=nPRCQ8cildJ5aqCA-1&scaling=scale-down-width&mode=design';
            }
            document.getElementById('portfolio-iframe').src = iframeSrc;
        }
    </script>
</head>
<body onload="setIframeSource()">
    <iframe
        id="portfolio-iframe"
        width="100%"
        height="100%"
        frameborder="0"
        allowfullscreen
        allow="clipboard-write"
    ></iframe>
</body>
</html>
